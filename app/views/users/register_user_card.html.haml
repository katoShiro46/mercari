= render partial: 'users/shared/users_register'
.card
  .card-main
    .card-main__header
      %h2 支払い方法
    .card-main__content
      = form_for @card, url: {action: 'register_user_complete'} do |f|
        = f.label :card_number, 'カード番号'
        %span 必須
        %br
        = f.text_field :card_number,placeholder: '半角数字のみ'
        %br
        .card-kinds
          %ul
            %li.visa
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3435714107')
            %li.master
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3435714107')
            %li.saison
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3435714107')
            %li.jcb
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3435714107')
            %li.american
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3435714107')
            %li.dinor
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3435714107')
            %li.discover
              = image_tag('//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3435714107')
        = f.label :year, '有効期限'
        %span 必須
        %br
        = select_tag :year,placeholder: '--'
        %br
        = select_tag  :month,placeholder: '--'
        %br
        = f.label :security_code, 'セキュリティーコード'
        %span 必須
        %br
        = f.text_field :security_code, placeholder: 'カード背面4桁もしくは3桁の番号'
        = link_to 'カード裏面の番号とは','#'

        = f.submit '次へ進む'
= render partial: 'users/shared/footer'
